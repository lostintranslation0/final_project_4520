<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <TextView
        android:id="@+id/text_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Profile"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="681dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_profile">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:src="@tools:sample/avatars" />

        <Button
            android:id="@+id/profileViewFollowersButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Followers" />

        <Button
            android:id="@+id/profileMyBlogsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Blogs" />

        <TextView
            android:id="@+id/updateProfileTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Update Profile:"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <EditText
            android:id="@+id/profileEmailEditText"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:ems="10"
            android:hint="New Email:"
            android:inputType="text" />

        <EditText
            android:id="@+id/profilePasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="New Password:"
            android:inputType="text" />

        <EditText
            android:id="@+id/profileAgeEditText"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:ems="10"
            android:hint="Update Age:"
            android:inputType="text" />

        <Button
            android:id="@+id/takeNewProfilePicButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take New Profile Picture" />

        <Button
            android:id="@+id/uploadNewProfilePicButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload New Profile Picture" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>