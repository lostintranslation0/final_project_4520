<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10sp">

        <TextView
            android:id="@+id/profileTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:text="Profile"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profileFragmentImage"
                android:layout_width="100sp"
                android:layout_height="100sp"
                tools:src="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/profileViewFollowersButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Followers" />

                <Button
                    android:id="@+id/profileMyBlogsButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Blogs" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/updateProfileTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Profile:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <EditText
            android:id="@+id/profileEmailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Email:"
            android:inputType="text" />

        <EditText
            android:id="@+id/profilePasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Password:"
            android:inputType="text" />

        <EditText
            android:id="@+id/profileAgeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Update Age:"
            android:inputType="text" />

        <Button
            android:id="@+id/takeNewProfilePicButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take New Profile Picture" />

        <Button
            android:id="@+id/uploadNewProfilePicButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:text="Upload New Profile Picture" />

        <Button
            android:id="@+id/saveProfileChanges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save" />

        <Switch
            android:id="@+id/darkModeSwitch"
            android:layout_width="127dp"
            android:gravity="center"
            android:text="Dark Mode"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>